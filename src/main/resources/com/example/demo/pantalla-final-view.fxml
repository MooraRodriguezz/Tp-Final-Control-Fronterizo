<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="600.0" spacing="25.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.PantallaFinalViewController">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label id="tituloPrincipal" text="FIN DE TURNO" />

    <Label text="RENDIMIENTO DEL OFICIAL" styleClass="menu-title"/>

    <GridPane alignment="CENTER" hgap="20" vgap="15">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0" />
            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
        </rowConstraints>

        <Label text="TOTAL DECISIONES:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
        <Label fx:id="lblTotal" styleClass="info-data" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1" />

        <Label text="ACIERTOS TOTALES:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
        <Label fx:id="lblAciertos" styleClass="info-data" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1" />

        <Label text="ERRORES TOTALES:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <Label fx:id="lblErrores" styleClass="info-data" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1" />

        <Label text="PUNTUACIÓN FINAL:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <Label fx:id="lblPuntuacion" styleClass="info-data-large" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1" />
    </GridPane>

    <VBox alignment="CENTER" spacing="10.0">
        <Button fx:id="btnVolverMenu" onAction="#onVolverMenuClick" text="[ VOLVER AL MENÚ DE INICIO ]" />
        <Button fx:id="btnCerrarSesion" onAction="#onCerrarSesionClick" text="[ CERRAR SESIÓN / LOGIN ]" />
    </VBox>
</VBox>