<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="350.0" prefWidth="500.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.LoginViewController">
    <children>
        <Label fx:id="tituloPrincipal" alignment="CENTER" layoutX="14.0" layoutY="30.0" text="PUESTO DE CONTROL FRONTERIZO" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="30.0" />
        <Label layoutX="146.0" layoutY="90.0" text="USUARIO:" />
        <TextField fx:id="usernameField" layoutX="146.0" layoutY="115.0" prefHeight="35.0" prefWidth="210.0" />
        <Label layoutX="146.0" layoutY="165.0" text="CLAVE:" />
        <PasswordField fx:id="passwordField" layoutX="146.0" layoutY="190.0" prefHeight="35.0" prefWidth="210.0" />

        <HBox alignment="CENTER" layoutY="250.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <children>
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="[ INGRESAR ]" />
            </children>
        </HBox>

        <Label fx:id="errorMessageLabel" alignment="CENTER" text="ACCESO DENEGADO" visible="false" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" />
    </children>
</AnchorPane>