<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="550.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.LoginViewController">
    <children>
        <Label fx:id="tituloPrincipal" alignment="CENTER" text="PUESTO DE CONTROL FRONTERIZO" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" AnchorPane.topAnchor="40.0" />

        <VBox alignment="CENTER" spacing="15.0" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="90.0">
            <children>
                <VBox alignment="TOP_LEFT" maxWidth="210.0" spacing="5.0">
                    <children>
                        <Label text="USUARIO:" />
                        <TextField fx:id="usernameField" prefHeight="35.0" prefWidth="210.0" />
                        <Label text="CLAVE:">
                            <VBox.margin>
                                <Insets top="10.0" />
                            </VBox.margin>
                        </Label>
                        <PasswordField fx:id="passwordField" prefHeight="35.0" prefWidth="210.0" />
                    </children>
                </VBox>
                <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLoginButtonClick" text="[ INGRESAR ]" />
            </children>
        </VBox>

        <Label fx:id="errorMessageLabel" alignment="CENTER" text="ACCESO DENEGADO" visible="false" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="15.0" AnchorPane.rightAnchor="15.0" />
    </children>
</AnchorPane>