<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.PantallaInicioOficialController">
    <children>
        <VBox alignment="CENTER" spacing="25.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label id="tituloPrincipal" text="CONTROL FRONTERIZO" />

                <Button fx:id="playButton" id="playButton" onAction="#iniciarSistema" prefHeight="70.0" prefWidth="220.0" text="▶ PLAY" />

                <Button fx:id="statsButton" onAction="#onEstadisticasClick" prefWidth="220.0" text="[ ESTADÍSTICAS ]" />

                <Button fx:id="ajustesButton" onAction="#onAjustesClick" prefWidth="220.0" text="[ CERRAR SESIÓN ]" />
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>