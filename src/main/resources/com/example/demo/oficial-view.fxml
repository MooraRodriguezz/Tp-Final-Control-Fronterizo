<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="1100.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.OficialViewController">
    <top>
        <VBox alignment="CENTER" styleClass="top-bar">
            <children>
                <Label fx:id="tituloPrincipal" alignment="CENTER" text="PUESTO DE CONTROL FRONTERIZO" />
                <Label fx:id="puntuacionLabel" styleClass="info-data" text="Puntos: 0" />
            </children>
            <padding>
                <Insets bottom="10.0" top="10.0" />
            </padding>
        </VBox>
    </top>

    <left>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="pane-with-border">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" top="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label styleClass="menu-title" text="[ APLICANTE ]" />
                <ImageView fx:id="fotoPersonaImageView" fitHeight="150.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" />
                <GridPane hgap="10" vgap="8">
                    <children>
                        <Label text="NOMBRE:" GridPane.rowIndex="0" />
                        <Label fx:id="nombreLabel" styleClass="info-data-small" text="[...]" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="NACIONALIDAD:" GridPane.rowIndex="1" />
                        <Label fx:id="nacionalidadLabel" styleClass="info-data-small" text="[...]" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="F. NACIMIENTO:" GridPane.rowIndex="2" />
                        <Label fx:id="fechaNacimientoLabel" styleClass="info-data-small" text="[...]" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="ALTURA:" GridPane.rowIndex="3" />
                        <Label fx:id="alturaLabel" styleClass="info-data-small" text="[...]" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="PESO:" GridPane.rowIndex="4" />
                        <Label fx:id="pesoLabel" styleClass="info-data-small" text="[...]" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </left>

    <center>
        <VBox alignment="TOP_CENTER" prefWidth="350.0" spacing="15.0" styleClass="pane-with-border">
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label styleClass="menu-title" text="[ DETALLE DE DOCUMENTO ]" />
                <GridPane hgap="10" vgap="15">
                    <children>
                        <Label text="TIPO:" GridPane.rowIndex="0" />
                        <Label fx:id="lblTipo" styleClass="info-data" text="[...]" GridPane.rowIndex="0" GridPane.columnIndex="1" />

                        <Label text="NÚMERO:" GridPane.rowIndex="1" />
                        <Label fx:id="lblNumero" styleClass="info-data" text="[...]" GridPane.rowIndex="1" GridPane.columnIndex="1" />

                        <Label text="PAÍS EMISOR:" GridPane.rowIndex="2" />
                        <Label fx:id="lblPaisEmisor" styleClass="info-data" text="[...]" GridPane.rowIndex="2" GridPane.columnIndex="1" />

                        <Label text="EXPIRA:" GridPane.rowIndex="3" />
                        <Label fx:id="lblFechaExp" styleClass="info-data" text="[...]" GridPane.rowIndex="3" GridPane.columnIndex="1" />

                        <Label text="ESTADO:" GridPane.rowIndex="4" />
                        <Label fx:id="lblEstado" styleClass="info-data-large" text="[...]" GridPane.rowIndex="4" GridPane.columnIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </center>

    <right>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="pane-with-border">
            <BorderPane.margin>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
            <padding>
                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
            </padding>
            <children>
                <Label styleClass="menu-title" text="[ DOCUMENTOS ]" />
                <ListView fx:id="documentosListView" prefHeight="250.0" />
                <Separator prefWidth="200.0" />
                <Button fx:id="ajustesButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAjustesClick" text="[ AJUSTES ]" />
            </children>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" spacing="50.0" styleClass="decision-pane">
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
            <children>
                <Button fx:id="aprobarButton" mnemonicParsing="false" onAction="#onAprobarClick" styleClass="decision-button-approve" text="APROBAR" />
                <Button fx:id="rechazarButton" mnemonicParsing="false" onAction="#onRechazarClick" styleClass="decision-button-deny" text="RECHAZAR" />
            </children>
        </HBox>
    </bottom>
</BorderPane>