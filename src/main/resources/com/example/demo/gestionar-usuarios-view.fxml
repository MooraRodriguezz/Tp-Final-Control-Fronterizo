<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="450.0" prefWidth="600.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.GestionarUsuariosViewController">
    <top>
        <Label id="tituloPrincipal" text="GESTIÓN DE USUARIOS" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" top="20.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <TableView fx:id="tablaUsuarios" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="colNombre" prefWidth="250.0" text="Nombre de Usuario">
                    <cellValueFactory><PropertyValueFactory property="nombre" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colRol" prefWidth="250.0" text="Rol">
                    <cellValueFactory><PropertyValueFactory property="rol" /></cellValueFactory>
                </TableColumn>
            </columns>
            <BorderPane.margin>
                <Insets left="20.0" right="20.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="txtNombre" promptText="Nombre" />
                        <TextField fx:id="txtContrasenia" promptText="Contraseña" />
                        <TextField fx:id="txtRol" promptText="Rol (ADMIN / OFICIAL)" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <Button fx:id="btnAgregar" onAction="#onAgregarUsuarioClick" text="[ AGREGAR USUARIO ]" />
                    <Button fx:id="btnEliminar" onAction="#onEliminarUsuarioClick" styleClass="danger-button" text="[ ELIMINAR SELECCIONADO ]" />
                </HBox>
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>