<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.CheckBox?>

<BorderPane prefHeight="500.0" prefWidth="700.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.GestionarUsuariosViewController">
    <top>
        <Label id="tituloPrincipal" text="GESTIÓN DE USUARIOS" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="10.0" top="20.0" />
            </BorderPane.margin>
        </Label>
    </top>
    <center>
        <TableView fx:id="tablaUsuarios" prefHeight="200.0" prefWidth="200.0">
            <columns>
                <TableColumn fx:id="colNombre" prefWidth="200.0" text="Nombre de Usuario">
                    <cellValueFactory><PropertyValueFactory property="nombre" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colRol" prefWidth="200.0" text="Rol">
                    <cellValueFactory><PropertyValueFactory property="rol" /></cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="colActivo" prefWidth="100.0" text="Activo">
                    <cellValueFactory><PropertyValueFactory property="activo" /></cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <BorderPane.margin>
                <Insets left="20.0" right="20.0" />
            </BorderPane.margin>
        </TableView>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="[ AÑADIR NUEVO USUARIO ]" styleClass="menu-title"/>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="txtNombre" promptText="Nombre" />
                        <TextField fx:id="txtContrasenia" promptText="Contraseña" />
                        <TextField fx:id="txtRol" promptText="Rol (ADMIN / OFICIAL)" />
                        <Button fx:id="btnAgregar" onAction="#onAgregarUsuarioClick" text="[ AGREGAR ]" />
                    </children>
                </HBox>

                <Label text="[ MODIFICAR USUARIO SELECCIONADO ]" styleClass="menu-title">
                    <VBox.margin>
                        <Insets top="15.0" />
                    </VBox.margin>
                </Label>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="txtModNombre" editable="false" promptText="Nombre (No editable)" />
                        <TextField fx:id="txtModContrasenia" promptText="Nueva Contraseña" />
                        <TextField fx:id="txtModRol" promptText="Nuevo Rol" />
                        <CheckBox fx:id="checkActivo" text="Activo" textFill="#b9b9b9"/>
                    </children>
                </HBox>
                <Button fx:id="btnGuardarCambios" onAction="#onGuardarCambiosClick" text="[ GUARDAR CAMBIOS AL SELECCIONADO ]" />

            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>