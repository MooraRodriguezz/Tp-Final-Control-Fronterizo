<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="400.0" prefWidth="500.0" stylesheets="@Style.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.controlfrontera.Controllers.ConfigurarPaisesViewController">
    <top>
        <Label id="tituloPrincipal" text="CONFIGURAR PAÍSES VÁLIDOS" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="15.0" top="20.0" />
            </padding>
        </Label>
    </top>
    <center>
        <ListView fx:id="listaPaises" prefHeight="200.0" prefWidth="200.0">
            <BorderPane.margin>
                <Insets left="20.0" right="20.0" />
            </BorderPane.margin>
        </ListView>
    </center>
    <bottom>
        <VBox alignment="CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <TextField fx:id="txtNombrePais" prefWidth="250.0" promptText="Nombre del País" />
                        <Button fx:id="btnAgregar" onAction="#onAgregarPaisClick" text="[ AGREGAR ]" />
                    </children>
                </HBox>
                <Button fx:id="btnEliminar" onAction="#onEliminarPaisClick" styleClass="danger-button" text="[ ELIMINAR SELECCIONADO ]" />
            </children>
            <padding>
                <Insets bottom="20.0" top="20.0" />
            </padding>
        </VBox>
    </bottom>
</BorderPane>